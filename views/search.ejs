  <body>
    <h1>交通費メモ</h1>
    <form method="post" action="/memo/1">
        <div class="memo">
            <label>日付</label>
            <input type="date"  name="today" value= <%= data1 %>>
        </div><br>

        <div class="memo_shudan">
            交通手段
            <select name="memo_shudan_1" value=<%= data2 %> >
