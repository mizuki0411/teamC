        <div class="memo">
            <label>乗車駅</label>
            <input type="text" name="boardingstation" value="<%= data3 %> ">
        </div>

        <div class="memo">
            <label>経由駅</label>
            <input type="text"name="viastation" value=<%= data8 %>>
        </div>

        <div class="memo">
            <label>降車駅</label>
            <input type="text" name="getoffstation" value="<%= data4 %> ">
        </div>
        
        <div class="memo">
            <label>運賃</label>
            <input type="text"name="untin" value="<%= data %>" >円 
        </div>
        
        <div class="memo">
            <label>回数</label>
            <input type="text" name="number" value=<%= data5 %> >回
        </div><br>

        <div class="memo">
            <label>ジョブ名</label>
            <input type="text"name="job" value=<%= data6%>>
        </div><br>

         <div class="memo">
            <label>メモ</label>
            <input type="text"name="koutuuhimemo" value=<%= data7%>>
        </div><br>

        <p class="memo_btn">
            <input type="submit" value="登録" id="btn">　
        </p>

        <button type=“button” class="top_btn" onclick="location.href='/top'">トップページへ</button>

        <p class="memo_btn">
            <a href="top">トップへ</a>
          </p>

